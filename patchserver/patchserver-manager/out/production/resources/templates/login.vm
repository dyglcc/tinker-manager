<div class="container">
    <form class="form-signin" action="#springUrl('/login')" method="post">
        <h3 class="sign-up-title" style="color:dimgray; text-align: center">补丁管理后台</h3>
        <label for="username" class="sr-only">用户名</label>
        <input type="username" id="username" class="form-control" placeholder="用户名" required="" autofocus=""
               name="username" minlength="5" value="$!restR.data.loginname">
        <label for="inputPassword" class="sr-only">密码</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="密码" required="" name="password"
               minlength="5" value="$!restR.data.loginpwd">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="rememberPwd" checked="true"> 记住密码
            </label>
        </div>
        <input name="redirect" type="hidden" value="$restR.data.redirect">
        <div ng-show="errormag.length>0" style="line-height: 30px">$!restR.message</div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>

        #if($!restR.data.openRegist)
                <p class="text-center" style="margin-top: 20px"><a
                        href="#springUrl('')/regist?redirect=$restR.data.redirect">注册sdfaksdfasdflasdlfslkdf</a></p>
        #end

    </form>

